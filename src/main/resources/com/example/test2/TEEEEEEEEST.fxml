<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.test2.BoletaController"
            style="-fx-background-color: linear-gradient(to bottom, #041529, #03101f);">

    <children>
        <!-- Centrar tarjeta -->
        <StackPane AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <children>

                <!-- Tarjeta central -->
                <VBox spacing="18.0" alignment="TOP_CENTER"
                      maxWidth="780.0" maxHeight="440.0"
                      style="-fx-background-color: #020818; -fx-background-radius: 24;">
                    <padding>
                        <Insets top="24.0" right="28.0" bottom="24.0" left="28.0"/>
                    </padding>
                    <children>

                        <!-- Barra superior: Volver a la derecha -->
                        <HBox alignment="CENTER_RIGHT" prefWidth="724.0">
                            <children>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnVolver"
                                        text="Volver"

                                        style="-fx-background-color: #e15258;
                                -fx-text-fill: white;
                                -fx-font-weight: bold;
                                -fx-background-radius: 999;
                                -fx-padding: 6 22 6 22;"/>
                            </children>
                        </HBox>

                        <!-- TÃ­tulo -->
                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Text text="Boleta" fill="white">
                                    <font>
                                        <Font name="Segoe UI Semibold" size="30.0"/>
                                    </font>
                                </Text>
                                <Text text="Selecciona una boleta para ver su detalle"
                                      fill="#7f8ea3">
                                    <font>
                                        <Font name="Segoe UI" size="13.0"/>
                                    </font>
                                </Text>
                            </children>
                        </VBox>

                        <!-- Contenido: tabla izquierda / detalle derecha -->
                        <HBox spacing="18.0">
                            <children>

                                <!-- Lado izquierdo: tabla de boletas -->
                                <VBox spacing="8.0">
                                    <children>
                                        <Text text="Boletas" fill="#7f8ea3">
                                            <font>
                                                <Font name="Segoe UI" size="12.0"/>
                                            </font>
                                        </Text>

                                        <TableView fx:id="tablaBoletas"
                                                   prefWidth="170.0" prefHeight="300.0"
                                                   style="-fx-background-color: #020818;
                                                          -fx-border-color: #0f172a;
                                                          -fx-border-radius: 12;
                                                          -fx-background-radius: 12;">
                                            <columns>
                                                <TableColumn fx:id="colIdBoleta"
                                                             text="ID"
                                                             prefWidth="150.0"/>
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>

                                <!-- Lado derecho: detalle de la boleta -->
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Text text="Detalle de la boleta" fill="#7f8ea3">
                                            <font>
                                                <Font name="Segoe UI" size="12.0"/>
                                            </font>
                                        </Text>

                                        <TextArea fx:id="txtBoleta"
                                                  prefHeight="300.0"
                                                  wrapText="true"
                                                  style="
                                                      -fx-control-inner-background: #020818;
                                                      -fx-text-fill: #e5e7eb;
                                                      -fx-highlight-fill: #3b82f6;
                                                      -fx-border-color: #0f172a;
                                                      -fx-border-radius: 12;
                                                      -fx-background-radius: 12;
                                                      -fx-font-family: 'Consolas';
                                                      -fx-font-size: 13;">
                                        </TextArea>
                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </StackPane>
    </children>
</AnchorPane>
