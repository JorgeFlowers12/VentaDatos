<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="900.0"
           style="-fx-background-color: linear-gradient(to bottom, #141e30, #243b55);"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.test2.TablasTienda">

    <children>
        <!-- Contenedor principal centrado -->
        <StackPane maxWidth="780.0" maxHeight="520.0">
            <children>

                <!-- Tarjeta oscura -->
                <Rectangle width="780.0" height="520.0"
                           arcWidth="28.0" arcHeight="28.0"
                           style="-fx-fill: rgba(15,22,40,0.96);">
                    <effect><Bloom/></effect>
                </Rectangle>

                <BorderPane>
                    <padding>
                        <Insets top="20.0" right="24.0" bottom="18.0" left="24.0"/>
                    </padding>

                    <!-- TOP: título + volver + monto total -->
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                            <children>
                                <Text text="Muebles"
                                      style="-fx-fill: white;">
                                    <font><Font size="26.0"/></font>
                                </Text>

                                <Region HBox.hgrow="ALWAYS"/>

                                <!-- Monto total -->
                                <Text fx:id="lblMontoTotal"
                                      text="Monto Total $ 0"
                                      style="-fx-fill: #37cf6b;">
                                    <font><Font size="16.0"/></font>
                                </Text>

                                <!-- Botón volver -->
                                <Button fx:id="btnVolver"
                                        text="Volver"
                                        onAction="#volverMenu1"
                                        style="-fx-background-color: #c94c4c;
                                               -fx-text-fill: white;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 8;
                                               -fx-padding: 6 18;"/>
                            </children>
                        </HBox>
                    </top>

                    <!-- CENTRO: productos + carrito -->
                    <center>
                        <HBox spacing="20.0">
                            <children>

                                <!-- COLUMNA IZQUIERDA: Productos + descripción -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Text text="Lista de productos"
                                              style="-fx-fill: #9faac7;">
                                            <font><Font size="14.0"/></font>
                                        </Text>

                                        <!-- Tabla de productos -->
                                        <TableView fx:id="tablaProductos"
                                                   prefWidth="360.0"
                                                   prefHeight="280.0"
                                                   style="-fx-background-color: transparent;
                                                          -fx-control-inner-background: rgba(10,17,35,0.95);
                                                          -fx-border-color: #1391EB;
                                                          -fx-border-radius: 10;
                                                          -fx-background-radius: 10;">
                                            <columns>
                                                <TableColumn fx:id="colId" text="ID" prefWidth="55.0"/>
                                                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100.0"/>
                                                <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="90.0"/>
                                                <TableColumn fx:id="colCantidad" text="Stock" prefWidth="60.0"/>
                                                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="80.0"/>
                                            </columns>
                                        </TableView>

                                        <!-- Descripción del producto -->
                                        <Text text="Descripción"
                                              style="-fx-fill: #9faac7;">
                                            <font><Font size="14.0"/></font>
                                        </Text>

                                        <TextArea fx:id="txtDescripcion"
                                                  editable="false"
                                                  wrapText="true"
                                                  prefWidth="360.0"
                                                  prefHeight="90.0"
                                                  style="-fx-background-radius: 10;
                                                         -fx-control-inner-background: #111828;
                                                         -fx-text-fill: #dce3ff;"/>
                                    </children>
                                </VBox>

                                <!-- COLUMNA DERECHA: Carrito -->
                                <VBox spacing="10.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                                            <children>
                                                <Text text="Carrito"
                                                      style="-fx-fill: #9faac7;">
                                                    <font><Font size="14.0"/></font>
                                                </Text>

                                                <Region HBox.hgrow="ALWAYS"/>

                                                <!-- Botón añadir al carrito (desde selección de la izquierda) -->
                                                <Button text="Añadir"
                                                        onAction="#agregarAlCarrito"
                                                        style="-fx-background-color: #1391EB;
                                                               -fx-text-fill: white;
                                                               -fx-font-weight: bold;
                                                               -fx-background-radius: 8;
                                                               -fx-padding: 4 10;"/>
                                            </children>
                                        </HBox>

                                        <!-- Tabla del carrito -->
                                        <TableView fx:id="tablaCarrito"
                                                   prefWidth="320.0"
                                                   prefHeight="280.0"
                                                   style="-fx-background-color: transparent;
                                                          -fx-control-inner-background: rgba(10,17,35,0.95);
                                                          -fx-border-color: #1391EB;
                                                          -fx-border-radius: 10;
                                                          -fx-background-radius: 10;">
                                            <columns>
                                                <TableColumn fx:id="colCarritoNombre" text="Producto" prefWidth="150.0"/>
                                                <TableColumn fx:id="colCarritoPrecio" text="Precio" prefWidth="80.0"/>
                                                <TableColumn fx:id="colCarritoCantidad" text="Cant." prefWidth="70.0"/>
                                            </columns>
                                        </TableView>

                                        <!-- Botones carrito -->
                                        <HBox spacing="10.0" alignment="CENTER_RIGHT">
                                            <children>
                                                <Button text="Eliminar"
                                                        onAction="#eliminarDelCarrito"
                                                        style="-fx-background-color: #c94c4c;
                                                               -fx-text-fill: white;
                                                               -fx-font-weight: bold;
                                                               -fx-background-radius: 8;
                                                               -fx-padding: 6 12;"/>

                                                <Button text="Vaciar"
                                                        onAction="#vaciarCarrito"
                                                        style="-fx-background-color: #c94c4c;
                                                               -fx-text-fill: white;
                                                               -fx-font-weight: bold;
                                                               -fx-background-radius: 8;
                                                               -fx-padding: 6 12;"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </children>
                        </HBox>
                    </center>

                    <!-- BOTTOM: error + Ir a pagar -->
                    <bottom>
                        <HBox spacing="10.0" alignment="CENTER_RIGHT">
                            <children>

                                <!-- Mensaje error -->
                                <Text fx:id="textoerror"
                                      text=""
                                      style="-fx-fill: #ff5959;"
                                      wrappingWidth="400.0">
                                    <font><Font size="13.0"/></font>
                                </Text>

                                <Region HBox.hgrow="ALWAYS"/>

                                <!-- Botón ir a pagar -->
                                <Button fx:id="btnIrAPagar"
                                        text="Ir a pagar"
                                        onAction="#irAPagar"
                                        style="-fx-background-color: #4caf50;
                                               -fx-text-fill: white;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 10;
                                               -fx-padding: 8 18;"/>
                            </children>
                        </HBox>
                    </bottom>

                </BorderPane>
            </children>
        </StackPane>
    </children>
</StackPane>
